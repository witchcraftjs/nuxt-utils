{
	"name": "@witchcraft/nuxt-utils",
	"version": "0.0.0",
	"description": "Nuxt/build utils.",
	"type": "module",
	"sideEffects": false,
	"main": "./dist/module.cjs",
	"types": "./dist/types.d.ts",
	"//exports": {
		"./utils/ensureEnv.js": "Temporary for drizzle. See nuxt-postgres/src/drizzleConfig.ts for more details."
	},
	"exports": {
		".": {
			"types": "./dist/types.d.ts",
			"import": "./dist/module.mjs",
			"require": "./dist/module.cjs"
		},
		"./utils": {
			"types": "./dist/runtime/utils/index.d.ts",
			"import": "./dist/runtime/utils/index.js"
		},
		"./utils/*": {
			"types": "./dist/runtime/utils/*.d.ts",
			"import": "./dist/runtime/utils/*"
		},
		"./utils/ensureEnv.js": {
			"types": "./dist/ensureEnv.d.ts",
			"import": "./dist/ensureEnv.mjs",
			"require": "./src/ensureEnv.ts"
		}
	},
	"scripts": {
		"prepare": "husky && pnpm build",
		"build": "nuxt-module-build prepare && nuxt-module-build build",
		"dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
		"lint": "eslint \"{src,test}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:types": "vue-tsc --noEmit"
	},
	"dependencies": {
		"@alanscodelog/utils": "^5.0.0",
		"@nuxt/kit": "^3.13.2",
		"change-case": "^5.4.4",
		"defu": "^6.1.4",
		"fast-glob": "^3.2.12",
		"pino": "^9.4.0",
		"pino-pretty": "^11.2.2",
		"vite-plugin-externalize-deps": "^0.8.0"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "^5.0.3",
		"@alanscodelog/semantic-release-config": "^5.0.3",
		"@alanscodelog/tsconfigs": "^5.0.0",
		"@nuxt/devtools": "^1.5.0",
		"@nuxt/eslint-config": "^0.5.7",
		"@nuxt/module-builder": "^0.8.4",
		"@nuxt/schema": "^3.13.2",
		"@nuxt/test-utils": "^3.14.2",
		"@types/node": "latest",
		"changelogen": "^0.5.7",
		"eslint": "=9.12.0",
		"husky": "^9.1.7",
		"nuxt": "^3.16.2",
		"typescript": "^5.5.0",
		"vite": "^6.0.2",
		"vitest": "^3.1.1",
		"vue-tsc": "^2.1.6"
	},
	"author": "Alan <alanscodelog@gmail.com>",
	"repository": "https://github.com/witchcraftjs/nuxt-utils",
	"license": "MIT",
	"files": [
		"src",
		"dist"
	],
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
