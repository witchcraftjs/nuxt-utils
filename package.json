{
	"name": "@witchcraft/nuxt-utils",
	"version": "0.2.1",
	"description": "Nuxt/build utils.",
	"type": "module",
	"sideEffects": false,
	"//exports": {
		"require": "Temporary for drizzle. See nuxt-postgres/src/drizzleConfig.ts for more details."
	},
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./utils": {
			"types": "./dist/runtime/utils/index.d.ts",
			"import": "./dist/runtime/utils/index.js"
		},
		"./*": {
			"types": "./dist/runtime/*.d.ts",
			"import": "./dist/runtime/*.js",
			"require": "./dist/runtime/*.js"
		}
	},
	"scripts": {
		"prepare": "husky && pnpm build",
		"build": "nuxt-module-build prepare && nuxt-module-build build",
		"build:only": "nuxt-module-build build",
		"dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
		"lint:eslint": "eslint \"{src,test}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"lint:types": "vue-tsc --noEmit",
		"lint": "pnpm lint:types && pnpm lint:eslint",
		"test": "vitest run",
		"test:watch": "vitest watch"
	},
	"dependencies": {
		"@alanscodelog/utils": "^6.0.1",
		"@nuxt/kit": "^4.1.1",
		"change-case": "^5.4.4",
		"defu": "^6.1.4",
		"fast-glob": "^3.3.3"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "^6.3.0",
		"@alanscodelog/semantic-release-config": "^5.0.4",
		"@alanscodelog/tsconfigs": "^6.1.0",
		"@nuxt/eslint-config": "^1.9.0",
		"@nuxt/module-builder": "^1.0.2",
		"@nuxt/schema": "^4.1.1",
		"@nuxt/test-utils": "^3.19.2",
		"@types/node": "latest",
		"changelogen": "^0.6.2",
		"eslint": "^9.35.0",
		"husky": "^9.1.7",
		"nuxt": "^4.1.1",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.6"
	},
	"author": "Alan <alanscodelog@gmail.com>",
	"repository": "https://github.com/witchcraftjs/nuxt-utils",
	"license": "MIT",
	"files": [
		"src",
		"dist"
	],
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
