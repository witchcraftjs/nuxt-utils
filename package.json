{
	"name": "@witchcraft/nuxt-utils",
	"version": "0.3.5",
	"description": "Nuxt/build utils.",
	"type": "module",
	"sideEffects": false,
	"//exports": {
		"require": "Temporary for drizzle. See nuxt-postgres/src/drizzleConfig.ts for more details."
	},
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./utils": {
			"types": "./dist/runtime/utils/index.d.ts",
			"import": "./dist/runtime/utils/index.js"
		},
		"./*": {
			"types": "./dist/runtime/*.d.ts",
			"import": "./dist/runtime/*.js",
			"require": "./dist/runtime/*.js"
		}
	},
	"scripts": {
		"prepare": "husky && pnpm build",
		"build": "nuxt-module-build prepare && nuxt-module-build build",
		"build:only": "nuxt-module-build build",
		"dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
		"lint:eslint": "eslint \"{src,test}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\" --max-warnings=0  --report-unused-disable-directives",
		"lint:types": "vue-tsc --noEmit",
		"lint:commits": "commitlint --from-last-tag --to HEAD --verbose",
		"lint": "pnpm lint:types && pnpm lint:eslint && pnpm lint:commits",
		"test": "echo no tests yet",
		"test:watch": "vitest watch"
	},
	"dependencies": {
		"@alanscodelog/utils": "catalog:",
		"@nuxt/kit": "catalog:",
		"change-case": "catalog:",
		"defu": "catalog:",
		"fast-glob": "catalog:"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "catalog:",
		"@alanscodelog/semantic-release-config": "catalog:",
		"@alanscodelog/tsconfigs": "catalog:",
		"@commitlint/cli": "catalog:",
		"@nuxt/eslint-config": "catalog:",
		"@nuxt/module-builder": "catalog:",
		"@nuxt/schema": "catalog:",
		"@nuxt/test-utils": "catalog:",
		"@types/node": "latest",
		"changelogen": "catalog:",
		"eslint": "catalog:",
		"husky": "catalog:",
		"nuxt": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vue-tsc": "catalog:"
	},
	"author": "Alan <alanscodelog@gmail.com>",
	"repository": "https://github.com/witchcraftjs/nuxt-utils",
	"license": "MIT",
	"files": [
		"src",
		"dist"
	],
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
